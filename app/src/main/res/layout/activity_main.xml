<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent">

    <TableRow
        android:id="@+id/gh1"
        android:layout_width="match_parent"
        android:layout_height="428dp"
        android:layout_weight="1"
        android:background=""
        android:backgroundTint="#d6f9da"
        android:backgroundTintMode="multiply"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/gh_ic1"
            android:layout_width="151dp"
            android:layout_height="fill_parent"
            app:srcCompat="@drawable/cocak" />

        <TextView
            android:id="@+id/gh_t1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/prod_1"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:id="@+id/gh2"
        android:layout_width="match_parent"
        android:layout_height="428dp"
        android:layout_weight="1"
        android:background=""
        android:backgroundTint="#d6f9da"
        android:backgroundTintMode="multiply"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">


        <ImageView
            android:id="@+id/gh_ic2"
            android:layout_width="151dp"
            android:layout_height="fill_parent"
            app:srcCompat="@drawable/ttg" />

        <TextView
            android:id="@+id/gh_t2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/prod_2"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:id="@+id/gh3"
        android:layout_width="match_parent"
        android:layout_height="428dp"
        android:layout_weight="1"
        android:background=""
        android:backgroundTint="#d6f9da"
        android:backgroundTintMode="multiply"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/gh_ic3"
            android:layout_width="151dp"
            android:layout_height="fill_parent"
            app:srcCompat="@drawable/cb" />

        <TextView
            android:id="@+id/gh_t3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/prod_3"
            android:textSize="18sp" />

    </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>